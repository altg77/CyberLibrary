<div class="hero-banner">
    <div class="container-hero">
        <div class="banner-content">
            <div class="slider-track">
                <img src="https://podpop.com.br/PodPOP/wp-content/uploads/2021/12/Banner-livros-Podpop.jpg"
                    alt="Banner de livros 1">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSZ8Sd5hUQ81sDRyNCmxxr4IfWUcSujUPpWFg&s"
                    alt="Banner de livros 2">
                <img src="https://www.estadao.com.br/recomenda/wp-content/uploads/2024/05/Design-sem-nome-19.png.webp"
                    alt="Banner de livros 3">
            </div>
            <div class="slider-dots">
                <span class="dot active" data-slide="0"></span>
                <span class="dot" data-slide="1"></span>
                <span class="dot" data-slide="2"></span>
            </div>
        </div>
    </div>
</div>

<div class="Separation">
    <div class="head">
    <h1>Recomendados para você</h1>
    <button class="view-more">VER MAIS</button>
</div>

<section class="book-carousel">
    <div class="book-item" data-book-id="1"
        data-description="Sung Jinwoo, a weak E-Rank hunter, barely survives a deadly dungeon. He then gains a unique ability to level up, becoming the 'Shadow Monarch' and fighting monstrous threats.">
        <img src="https://m.media-amazon.com/images/I/81OYRZEQG7L._UF1000,1000_QL80_.jpg" alt="Pescar truta na América">
        <p>Solo leveling</p>
        <div class="book-options">
            <i class="fas fa-ellipsis-h"></i>
        </div>
    </div>
    <div class="book-item" data-book-id="2"
        data-description="Monkey D. Luffy, a boy whose body gains the properties of rubber after unintentionally eating a Devil Fruit, sets sail from the East Blue Sea to find the 'One Piece,' the ultimate treasure, and become the King of the Pirates.">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR8uSVWEs2y3DfCPXiGs4H-eZ7qbg6wd3rVXw&s"
            alt="Orlando: uma biografia">
        <p>One piece</p>
        <div class="book-options">
            <i class="fas fa-ellipsis-h"></i>
        </div>
    </div>
    <div class="book-item" data-book-id="3" data-title="Monster" data-author="Draian"
        data-description="Dr. Kenzo Tenma, a brilliant neurosurgeon, chooses to save a young boy over the mayor, leading to a series of mysterious deaths and a terrifying hunt for a charismatic serial killer known only as 'Monster.'">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ2g0WGq6wShvviPkylkOmelCeELhNM2RQOzQ&s"
            alt="A chave de casa">
        <p>Monster</p>
        <div class="book-options">
            <i class="fas fa-ellipsis-h"></i>
        </div>
    </div>

</section>

<section class="detailed-book-view hidden">
    <div class="detailed-book-header">
        <span class="detailed-book-path"></span>
        <button class="close-detailed-view">&times;</button>
    </div>
    <div class="detailed-book-content">
        <div class="detailed-book-cover">
            <img src="imagem_2025-06-25_154827798_chave_de_casa_full.jpg" alt="Capa do livro A chave de casa">
            <div class="book-actions">
                <i class="fas fa-ellipsis-h"></i>
            </div>
        </div>
        <div class="detailed-book-info">
            <h2 class="detailed-book-title"></h2>
            <p class="detailed-book-author"></p>
            <div class="detailed-book-rating">
                <i class="fas fa-star filled"></i>
                <i class="fas fa-star filled"></i>
                <i class="fas fa-star filled"></i>
                <i class="fas fa-star filled"></i>
                <i class="fas fa-star"></i>
                <span class="star-count"></span>
                <i class="fas fa-share-alt share-icon"></i>
            </div>
            <div class="detailed-book-buttons">
                <button class="btn btn-borrow">RESERVAR</button>
                <button class="btn btn-preview">PEGAR EMPRESTADO</button>
            </div>
            <p class="detailed-book-description"></p>
            <div class="detailed-book-tags">
                <span>Fiction</span>
            </div>
            <button class="btn-view-more">VER MAIS ></button>
        </div>
    </div>
</section>


