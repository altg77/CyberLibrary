@model Usuario

@{
    ViewData["Title"] = "Cadastro de Usuários";
}

@section Styles {
    <link rel="stylesheet" href="/css/repositorios.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div class="contn">
    <h3 class="mb-2">Cadastro novo usuário</h3>
    <div class="card p-4 shadow-sm">
        <div class="row g-3">
            <form asp-controller="Usuarios" asp-action="Adicionar" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome completo do Usuário">
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email do Usuário">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="Telefone" class="form-label"></label>
                        <input type="tel" asp-for="Telefone" class="form-control" placeholder="(71) 9xxxx-xxxx">
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TurmaId" class="form-label">Turmas</label>
                        <select asp-for="TurmaId" class="form-select">
                            <option value="">Selecione...</option>
                            <option value="1">Turma A - 1º Ano EF</option>
                            <option value="2">Turma B - 3º Ano EM</option>
                            <option value="3">Turma de Reforço Mat.</option>
                        </select>
                        <span asp-validation-for="TurmaId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="Login" class="form-label"></label>
                        <input type="text" asp-for="Login" class="form-control"
                            placeholder="Login de acesso (ex: username)">
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Senha" class="form-label"></label>
                        <input type="password" asp-for="Senha" class="form-control" placeholder="**********">
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <button type="reset" class="btn btn-secondary ms-2">Limpar</button>
                    <a asp-controller="Usuarios" asp-action="Index" type="buttom" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>