@model Categoria

@{
    ViewData["Title"] = "Cadastro de Categorias";
}

@section Styles {
    <link rel="stylesheet" href="/css/repositorios.css" asp-append-version="true" />
}

@section Scripts {
    <script src="" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}

<h3 class="mb-2">Cadastro nova categoria</h3>

<div class="card p-4 shadow-sm">
    <div class="row g-3">
        <form asp-controller="Categorias" asp-action="Adicionar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" type="text" class="form-control" placeholder="Nome da categoria">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label">Sinopse</label>
                <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <button type="reset" class="btn btn-secondary" id="resetButton">Limpar</button>
                <a asp-controller="Categorias" asp-action="Index" type="buttom" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
